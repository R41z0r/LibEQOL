<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<Button name="LibEQOL_MultiDropdownTemplate" virtual="true" inherits="SettingsDropdownControlTemplate" mixin="LibEQOL_MultiDropdownMixin">
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Summary" inherits="GameFontHighlightSmall" justifyH="LEFT" maxLines="1">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Text" relativePoint="BOTTOMLEFT" x="0" y="-2" />
						<Anchor point="RIGHT" x="-4" y="0" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Button>

	<Button name="LibEQOL_SoundDropdownTemplate" virtual="true" inherits="SettingsListElementTemplate" mixin="LibEQOL_SoundDropdownMixin">
		<Size x="300" y="26" />
		<Scripts>
			<OnLoad method="OnLoad" />
		</Scripts>
	</Button>

	<Frame name="LibEQOL_ColorOverridesPanel" virtual="true" inherits="SettingsListElementTemplate" mixin="LibEQOL_ColorOverridesMixin">
		<Size x="200" y="60" />
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Header" inherits="GameFontNormal" justifyH="LEFT">
					<Size x="0" y="20" />
					<Anchors>
						<Anchor point="TOPLEFT" x="37" y="0" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="List" inherits="VerticalLayoutFrame">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.Header" relativePoint="BOTTOMLEFT" x="15" y="-10" />
				</Anchors>
				<KeyValues>
					<KeyValue key="spacing" value="10" type="number" />
				</KeyValues>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad" />
		</Scripts>
	</Frame>
	<Frame name="LibEQOL_ColorOverridesPanelNoHead" virtual="true" inherits="SettingsListElementTemplate" mixin="LibEQOL_ColorOverridesMixin">
		<Size x="200" y="25" />
		<Frames>
			<Frame parentKey="List" inherits="VerticalLayoutFrame">
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="0" />
				</Anchors>
				<KeyValues>
					<KeyValue key="spacing" value="10" type="number" />
				</KeyValues>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad" />
		</Scripts>
	</Frame>

	<Frame name="LibEQOL_ColorOverrideRowTemplate" virtual="true">
		<Size x="300" y="20" />
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Text" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" x="0" y="0" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="ColorSwatch" inherits="ColorSwatchTemplate">
				<Anchors>
					<Anchor point="RIGHT" x="0" y="0" />
				</Anchors>
			</Button>
		</Frames>
	</Frame>
</Ui>
